bar-volume-foreground-0 = ${colors.own-primary}
bar-volume-foreground-1 = ${colors.own-primary}
bar-volume-foreground-2 = ${colors.own-primary}
bar-volume-foreground-3 = ${colors.own-primary}
bar-volume-foreground-4 = ${colors.own-primary}
bar-volume-foreground-5 = ${colors.own-primary}
