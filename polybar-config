bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99
time-format = %H:%M
format-charging = <ramp-capacity> <label-charging>
; format-charging-underline = ${colors.own-secondary}
format-full = <ramp-capacity> <label-full>
; format-full-underline = ${self.format-charging-underline}
format-discharging = <ramp-capacity> <label-discharging>
; format-discharging-underline = ${self.format-charging-underline}
label-full = "%percentage%%"
label-charging = "⚡ %percentage%% %time%"
label-discharging = "%percentage%% %time%"

ramp-capacity-foreground = ${colors.own-foreground}
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.own-alert}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.own-alert}
ramp-capacity-2 = 
ramp-capacity-2-foreground = ${colors.own-warn}
ramp-capacity-3 = 
ramp-capacity-3-foreground = ${colors.own-primary}
ramp-capacity-4 = 
ramp-capacity-4-foreground = ${colors.own-primary}


