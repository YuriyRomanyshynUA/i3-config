[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

own-background = #222
own-background-alt = #444
own-foreground = #dfdfdf
own-foreground-alt = #555
own-primary = #248f24
own-secondary = #4080bf
own-alert = #bd2c40
own-warn = #ffb52a


[bar/main]
width = 100%
height = 33
radius = 0.0
fixed-center = false

background = ${colors.own-background}
foreground = ${colors.own-foreground}

line-size = 4
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 0

font-0 = fixed:pixelsize=12;1
font-1 = unifont:fontformat=truetype:size=12:antialias=false;0
font-2 = siji:pixelsize=12;1
font-3 = FontAwesome:size=12;0

modules-left = i3
modules-right = xbacklight pulseaudio battery wlan xkeyboard date

tray-position = right
tray-padding = 1

cursor-click = pointer
cursor-scroll = ns-resize


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = " %layout% "
label-layout-underline = ${colors.own-foreground}
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.own-alert}
label-indicator-underline = ${colors.own-alert}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;

label-mode-padding = 2
label-mode-background = ${colors.own-background-alt}
label-mode-underline = ${colors.own-primary}

label-focused = %icon%
label-focused-background = ${colors.own-background-alt}
label-focused-underline= ${colors.own-primary}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.own-background-alt}
label-urgent-underline= ${colors.own-warn}
label-urgent-padding = 2


[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
label = ""
bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.own-primary}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.own-foreground-alt}


[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
format-connected = <label-connected>
format-connected-underline = ${colors.own-primary}
label-connected = " %essid%"
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.own-alert}
label-disconnected = " offline"
label-disconnected-foreground = ${colors.own-alert}


[module/date]
type = internal/date
interval = 1
date =  " %Y-%m-%d"
time = %H:%M:%S
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.foreground}
label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume> <bar-volume>
